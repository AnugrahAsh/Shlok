<style>
    body {
      font-family: 'Roboto', sans-serif;
      margin: 0;
      padding: 0;
    }

    .footer-container {
      background-color: rgb(78, 70, 88);
      padding: 25px 20px;
      margin-top: 100px;
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    #links {
      display: flex;
      gap: 40px;
    }

    #links a {
      color: white;
      font-size: 18px;
      text-decoration: none;
    }

    #links a:hover {
      text-decoration: underline;
    }
    @keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
    .chakra img {
      height: 180px;
      width: auto;
      animation: rotate infinite 20s linear;
    }

    /* Responsive styles */
    @media screen and (max-width: 768px) {
      .footer-container {
        flex-direction: column;
      }
      
      #links {
        gap: 25px;
      }
    }

    /* Small mobile devices */
    @media screen and (max-width: 480px) {
      .chakra img {
        height: 120px;
      }
      
      #links {
        flex-direction: column;
        align-items: center;
        gap: 15px;
      }
      
      .footer-container {
        padding: 15px 10px;
      }
    }

    /* Very small mobile devices (360-370px) */
    @media screen and (max-width: 380px) {
      #links a {
        font-size: 16px;
      }
      
      .chakra img {
        height: 100px;
      }
    }
  </style>

<script src="https://unpkg.com/gsap@3/dist/gsap.min.js"></script>
<script src="https://unpkg.com/@barba/core"></script>

<script>
  barba.init({
    transitions: [
      {
        name: 'fade',
        leave(data) {
          return gsap.to(data.current.container, {
            opacity: 0
          });
        },
        enter(data) {
          return gsap.from(data.next.container, {
            opacity: 0
          });
        }
      }
    ]
  });
</script>

