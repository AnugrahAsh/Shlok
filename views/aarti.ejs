    <title>Aarti</title>

    <style>
        body{
            font-family: "Signika", sans-serif;
            font-weight: 400;
            margin: 0; 
            background-color: rgb(239, 219, 183);
            padding: 0;
            font-weight: normal;
        }
        .top-four{
            display: flex;
            flex-direction: row;
            margin-top: 40px;
            flex-wrap: wrap;
            justify-content: center;
            gap: 40px;
        }

        .card img {
            height: 300px;
            width: 300px;
            border-radius: 24px;
            object-fit: contain;
            filter: brightness(10px);
        }

        .card-image {
            height: 300px;
            width: 300px;
            border-radius: 24px;
        }

        .card {
            display: flex;
            height: auto;
            width: 700px;
            /* padding: 0 40px; */
            align-items: center;
            background-color: white;
            border: none;
            border-radius: 24px;
            text-align: left;
            margin: 0px 10px;
        }

        button {
            border: 2px solid black;
            padding: 12px 40px;
            background-color: white;
            transition: cubic-bezier(0.19, 1, 0.22, 1) 0.3s;
            border-radius: 10px;
            cursor: pointer;
        }

        button:hover {
            background-color: rgb(0, 0, 0);
            color: white;
            transform: translateY(-3px);
            transition: cubic-bezier(0.19, 1, 0.22, 1) 0.3s;
        }
        .other-aarti{
            margin-top: 60px;
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
            align-items: center;
        }
        .small-card img{
            width: 250px;
            height: 250px;
            object-fit: contain;
            background-color: white;
            border-radius: 24px;
        }
        .small-card{
            background-color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding-bottom: 30px;
            border-radius: 24px;
        }
        @media (max-width:450px) {
            .card img {
            height: 120px;
            width: 120px;
            }
            .card-image{
                height: 120px;
                width: 120px;
            }
            .card button{
                padding: 6px 20px;
                margin-bottom: 20px;
            }
            .card h1{
                font-size: 22px;
            }
            .card h3{
                font-size: 12px;
            }
            .small-card h1{
                font-size: 22px;
            }
            .small-card button{
                padding: 6px 20px;
            }
            .small-card img{
                height: 120px;
                width: 120px;
            }
            .small-card{
                padding: 10px 20px;
            }
            .top-four{
                gap: 25px;
            }
        }
    </style>
    
</head>
<body data-barba="wrapper">

    <%- include('../partials/navbar.ejs') %>

        
    <div class="top-four">
        <div class="card">
            <div class="card-image">    
                <img src="https://i.pinimg.com/736x/2e/cb/21/2ecb21ac00e8ba38eb023d7ffd5a9765.jpg" alt="">
